# ==============================================
# Swine Monitor Environment Variables
# ==============================================
# Copy this file to '.env' and fill in your values
# ==============================================

# ----------------------------------------------
# Camera Settings
# ----------------------------------------------
# RTSP URL format: rtsp://username:password@ip:port/path
RTSP_URL=rtsp://admin:password@192.168.1.100:554/stream

# ----------------------------------------------
# Email Notification (Gmail recommended)
# ----------------------------------------------
# Gmail App Password Setup:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification
# 3. Go to App passwords
# 4. Generate a new app password for "Mail"
# 5. Copy the 16-character password here

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
RECIPIENT_EMAIL=recipient@example.com
EMAIL_ENABLED=true

# ----------------------------------------------
# Discord Notification (Optional)
# ----------------------------------------------
# Discord Webhook Setup:
# 1. Open Discord, go to Server Settings > Integrations
# 2. Create a new Webhook
# 3. Copy the Webhook URL here

DISCORD_WEBHOOK_URL=
DISCORD_ENABLED=false

# ----------------------------------------------
# Notification Mode Settings
# ----------------------------------------------
# You can enable BOTH immediate and daily summary!

# Immediate: Send notification when detection occurs
IMMEDIATE_ENABLED=true

# Daily Summary: Send summary at specified time
DAILY_SUMMARY_ENABLED=false
DAILY_SUMMARY_TIME=09:00

# ----------------------------------------------
# Security
# ----------------------------------------------
# Default login password (change this!)
ADMIN_PASSWORD=admin
